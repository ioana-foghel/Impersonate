@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

@foreach (LoopItem item in GetLoop("ItemPublisher:Items.List"))
{
    <div class="grid grid__col--line-bottom">
        <div class="grid__col-md-5">
            <h2 class="article__header">@item.GetString("ItemPublisher:Item.Title")</h2>

            <div><small>@item.GetString("ItemPublisher:Item.Location")</small></div>
            <div><small>@item.GetDate("ItemPublisher:Item.Date").ToShortDateString()</small></div>
        </div>
        <div class="grid__col-md-5">
            @item.GetString("ItemPublisher:Item.Summary")
        </div>
        <div class="grid__col-md-2">
            <div class="grid__cell-footer">
                <div class="grid__cell">
                    <a href="@item.GetString("ItemPublisher:Item.DetailsUrl")" class="btn btn--primary dw-mod u-pull--right">@Translate("Read more")</a>
                </div>
            </div>
        </div>
    </div>
}
